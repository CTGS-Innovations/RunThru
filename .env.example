# ==================================
# RunThru Environment Configuration
# ==================================
# Copy this file to .env and update the values

# ============================================
# Application Configuration
# ============================================

# PIN code for authentication (simple shared secret)
PIN_CODE=1234

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# ============================================
# Port Configuration
# ============================================

# Frontend port (Next.js)
FRONTEND_PORT=3000

# Backend API port (Node.js/Express)
BACKEND_PORT=4000

# TTS service port (Python/FastAPI)
TTS_PORT=5000

# ============================================
# API URLs
# ============================================

# Public API URL (used by frontend)
# For local development: http://localhost:4000
# For Docker: http://backend:4000
# For production: https://your-domain.com/api
NEXT_PUBLIC_API_URL=http://backend:4000

# ============================================
# Database Configuration
# ============================================

# SQLite database path (inside container)
DATABASE_PATH=/data/database/runthru.db

# ============================================
# File Storage
# ============================================

# Audio cache directory
AUDIO_CACHE_DIR=/data/audio-cache

# Scripts directory
SCRIPTS_DIR=/data/scripts

# ============================================
# TTS Configuration
# ============================================

# TTS service URL (used by backend)
TTS_SERVICE_URL=http://tts-service:5000

# Model directory (inside container)
MODEL_DIR=/models

# CUDA device (0 for first GPU, -1 for CPU)
CUDA_VISIBLE_DEVICES=0

# ============================================
# Cloudflare Tunnel (Optional)
# ============================================

# Cloudflare Tunnel token (for public HTTPS access)
# Get this from: https://dash.cloudflare.com
# Uncomment the cloudflared service in docker-compose.yml to use
# CF_TUNNEL_TOKEN=your-tunnel-token-here

# ============================================
# Docker Configuration
# ============================================

# Compose project name
COMPOSE_PROJECT_NAME=runthru

# Docker buildkit (enable for better build performance)
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
