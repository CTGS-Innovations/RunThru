{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": ["src/**/*.test.ts", "node_modules"],
  "exec": "ts-node src/server.ts",
  "restartable": "rs",
  "env": {
    "NODE_ENV": "development"
  },
  "events": {
    "restart": "echo '\n🔄 Restarting server...\n'",
    "crash": "echo '\n❌ Server crashed - waiting for changes...\n'"
  },
  "delay": 1000,
  "colours": true,
  "signal": "SIGTERM"
}
